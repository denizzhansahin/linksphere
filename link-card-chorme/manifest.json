{
  "manifest_version": 3,
  "name": "LinkSphere X - Quick Link Shortener",
  "version": "2.0",
  "description": "Instantly shorten URLs with a sleek, modern LinkSphere extension.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://linksphere.tr/api/graphql"
  ]
}